{
    "manifest_version": 2,
    "name": "NBPA Prototype",
    "version": "1.0",
    "description": "Analyze Naver Blog Post",
    "permissions": [
        "storage",
        "activeTab",
        "declarativeContent",
        "tabs",
        "webNavigation"
    ],
    "background": {
        "scripts": ["js/background.js"]
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "72": "icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://search.naver.com/*",
                "https://blog.naver.com/*",
                "https://www.google.com/*"
            ],
            "run_at": "document_idle",
            "css": ["css/popup_style.css"],
            "js": ["js/content.js"]
        }
    ],
    "icons": {
        "72": "icon.png"
    }
}