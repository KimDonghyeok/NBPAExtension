{
    "name": "NBPA Prototype",
    "version": "1.0",
    "description": "Analyze Naver Blog Post",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus"
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*"],
            "all_frames": true,
            "run_at": "document_idle",
            "css": ["style.css"],
            "js": ["app.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "72": "icon.png"
        }
    }
}