{
    "name": "NBPA Prototype",
    "version": "1.0",
    "description": "Analyze Naver Blog Post",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://search.naver.com/search.naver?where=nexearch&sm=tab_jum&query=*",
                "https://search.naver.com/search.naver?where=post&sm=tab_jum&query=*"
            ],
            "all_frames": true,
            "run_at": "document_idle",
            "css": ["style.css"],
            "js": ["app.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "main_popup.html",
        "default_icon": {
            "72": "icon.png"
        }
    }
}