{
    "manifest_version": 2,
    "name": "NBPA Prototype",
    "version": "1.0",
    "description": "Analyze Naver Blog Post",
    "icons": {
        "16": "icon16.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png"
        }
    },
    "background": {
        "scripts": ["js/background_script.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://search.naver.com/*",
                "https://blog.naver.com/*",
                "https://www.google.com/*"
            ],
            "run_at": "document_idle",
            "css": ["css/content_style.css"],
            "js": ["js/content_script.js"]
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "declarativeContent",
        "tabs",
        "https://search.naver.com/*",
        "https://blog.naver.com/*",
        "https://www.google.com/*"
    ]
}