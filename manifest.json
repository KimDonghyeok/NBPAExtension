{
    "manifest_version": 2,
    "name": "NBPA Prototype",
    "version": "1.0",
    "description": "Analyze Naver Blog Post",
    "permissions": [
        "storage",
        "activeTab",
        "declarativeContent",
        "tabs",
        "webNavigation"
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "72": "icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://search.naver.com/search.naver?where=nexearch&sm=tab_jum&query=*",
                "https://search.naver.com/search.naver?where=post&sm=tab_jum&query=*",
                "https://blog.naver.com/*"
            ],
            "all_frames": true,
            "run_at": "document_idle",
            "css": ["css/popup_style.css"],
            "js": ["js/content.js"]
        }
    ],
    "icons": {
        "72": "icon.png"
    }
}